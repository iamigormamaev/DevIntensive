<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_gravity">top|left</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>

    <style name="disable_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="linear_layout_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="view_horizontal_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/size_large_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="view_vertical_delimiter">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/size_large_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="linear_layout_score_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/spacing_med_28</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_view_score_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

    </style>

    <style name="text_view_score_box.score">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="text_view_score_box.description">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="image_view_user_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="custom_AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="custom_Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>

    </style>

    <style name="login_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large_18</item>
        <item name="android:textColorHint">@color/grey_input_hint</item>
    </style>

    <style name="login_form.login">
        <item name="android:inputType">text</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_login</item>
    </style>

    <style name="login_form.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_password</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>



</resources>
